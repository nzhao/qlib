<?xml version="1.0" encoding="utf-8"?>
<config>
   <Name>
       <SolutionName type="char">hBNLayer</SolutionName>
   </Name>
   <Condition>
      <MagneticField type="eval">806*1e-4*[0 0 1]</MagneticField>
   </Condition>
