       <principle_axis type="char">default</principle_axis>       
   </SetBathSpins>
   <SetCentralSpin>
       <Name type="char">NV</Name>
       <CentralSpinStates type="eval">[1,2]</CentralSpinStates>
       <SetSpin type="double">1</SetSpin>
       <Orientation type="eval">[0,0,1]</Orientation>
       <Isotope type="char">14N</Isotope>
       <Coordinate type="eval">[0,0,25]</Coordinate>
   </SetCentralSpin>
   <Clustering>
        <LoadCluterIterator type="double">0</LoadCluterIterator>
        <CluterIteratorName type="char">0</CluterIteratorName>
		<CutOff type="double">3</CutOff>
		<MaxOrder type="double">4</MaxOrder>
   </Clustering>
</config>